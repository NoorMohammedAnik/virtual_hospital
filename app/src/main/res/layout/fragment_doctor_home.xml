<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rr.virtual_hospital.nav_drawer.askanexpert.DoctorHome">


    <ImageButton
        android:id="@+id/aae_doc_mypost"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:background="@null"
        android:src="@drawable/doc_my_post"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_unanswered_question_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/aae_doc_mypost">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
