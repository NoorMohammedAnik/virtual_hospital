<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_margin="4dp"
    android:background="@drawable/button4"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/each_question_placeholder"
        android:src="@drawable/each_question_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/each_question_placeholder"
        android:layout_marginLeft="15dp"
        android:id="@+id/each_question_title"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="2dp"
        android:layout_below="@id/each_question_title"
        android:id="@+id/each_question_time"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:gravity="start"
        android:textSize="14sp"
        android:text="Timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>